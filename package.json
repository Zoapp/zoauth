{
  "name": "zoauth-server",
  "version": "0.2.0",
  "description": "Authentification Server using ES7 with minimal dependencies",
  "main": "index.js",
  "scripts": {
    "start:dev": "nodemon -w src --exec \"node src\" --harmony",
    "build:dev": "babel src -s -D -d dist",
    "start:prod": "node dist",
    "lint:dev": "eslint src",
    "lint:prod": "eslint src",
    "build:prod": "babel -d dist/ src/ && cp -f ./package.json ./dist/package.json",
    "test": "./node_modules/.bin/mocha --compilers js:babel-core/register"
  },
  "keywords": [
    "Node",
    "ES7",
    "OAuth2"
  ],
  "author": "Mik BRY",
  "license": "MIT",
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "env": {
      "node": true
    },
    "rules": {
      "no-console": 0,
      "no-unused-vars": 1
    }
  },
  "dependencies": {
    "body-parser": "^1.17.2",
    "compression": "^1.6.2",
    "express": "^4.15.3",
    "morgan": "^1.8.1",
    "resource-router-middleware": "^0.6.0",
    "zoapp-core": "file:../zoapp-core/dist"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-plugin-transform-object-rest-spread": "^6.28.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2016": "^6.24.1",
    "chai": "^4.1.2",
    "eslint": "^4.13.1",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-plugin-import": "2.8.0",
    "mocha": "^4.0.1",
    "nodemon": "^1.13.1"
  }
}
